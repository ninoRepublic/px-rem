{
  "name": "px-rem",
  "displayName": "px-rem",
  "description": "px to rem",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.79.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "px-rem.pxToRem",
        "title": "üçë px to rem"
      },
      {
        "command": "px-rem.formatPsCss",
        "title": "üçë format ps css"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorLangId == css || editorLangId == scss", 
          "command": "px-rem.pxToRem",
          "group": "navigation"
        },
        {
          "when": "editorHasSelection && (editorLangId == css || editorLangId == scss)", 
          "command": "px-rem.formatPsCss",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.79.0",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {}
}
